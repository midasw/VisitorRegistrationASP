@model VisitorRegistration_ASP.Areas.Manage.Models.IndexViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Manage"];
}

<div class="container">
    <h2 class="pb-2">
        @ViewData["Title"]
    </h2>
    <p>
        @SharedLocalizer["Please choose a category below."]
    </p>
    <partial name="_StatusMessage" model="@TempData["StatusMessage"]" />

    <div class="card-deck">
        <div class="card shadow-sm">
            <a class="stretched-link text-secondary text-decoration-none" asp-controller="Companies" asp-action="Index">
                <div class="card-body px-4 py-3">
                    <i class="bi bi-building" style="font-size:3rem"></i>
                    <h5 class="card-title">@SharedLocalizer["Companies"]</h5>
                    <p class="card-text">@SharedLocalizer["Edit companies and employees."]</p>
                </div>
            </a>
        </div>
        <div class="card shadow-sm">
            <a class="stretched-link text-secondary text-decoration-none" asp-controller="Visitors" asp-action="Index">
                <div class="card-body px-4 py-3">
                    <i class="bi bi-people" style="font-size:3rem"></i>
                    <h5 class="card-title">@SharedLocalizer["Visitors"] <span class="badge badge-secondary">@Html.DisplayFor(model => model.VisitorsCount)</span></h5>
                    <p class="card-text">@SharedLocalizer["View a list of visitors currently in the building."]</p>
                    <p class="card-text">@*<small class="text-muted">Last updated 3 mins ago</small>*@</p>
                </div>
            </a>
        </div>
    </div>
</div>
